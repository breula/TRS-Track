<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup" 
    xmlns:range="clr-namespace:Syncfusion.SfRangeSlider.XForms;assembly=Syncfusion.SfRangeSlider.XForms"
    x:Class="TRSTrack.Popups.PopupAdjustRecordPage"
    BackgroundColor="#80000000">
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation 
            PositionIn="Center"
            PositionOut="Center"
            ScaleIn="1.2"
            ScaleOut="0.8"
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>
    <ContentPage.Content>
        <Frame
            Margin="50"
            Padding="0"
            HeightRequest="330"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="White"
            CornerRadius="5"
            HasShadow="True">
            <Grid
                ColumnSpacing="0"
                Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout 
                    Grid.Row="0"
                    Padding="20"
                    Orientation="Vertical"
                    VerticalOptions="Start" 
                    Spacing="0"
                    HeightRequest="35"
                    HorizontalOptions="FillAndExpand">
                    <Label
                        Text="AJUSTAR PARÂMETROS DE GRAVAÇÃO"
                        HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"
                        FontFamily="BoldFont"
                        FontSize="18"
                        TextColor="{StaticResource Color4}">
                    </Label>
                    <Label
                        Text="Ajusta parâmetros de distãncia e velocidade"
                        HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"
                        FontFamily="RegularFont"
                        FontSize="10"
                        TextColor="{StaticResource Color4}">
                    </Label>
                </StackLayout>
                
                <StackLayout
                    Grid.Row="1"
                    Padding="10"
                    Spacing="0"
                    Orientation="Vertical"
                    VerticalOptions="Fill" 
                    HorizontalOptions="FillAndExpand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackLayout
                            Grid.Column="0"
                            Grid.Row="0"
                            Spacing="0"
                            Orientation="Vertical">
                            <Label Text="Metros" FontFamily="RegularFont" FontSize="12" TextColor="{StaticResource Color4}" HorizontalOptions="CenterAndExpand"></Label>
                            <Label Text="{Binding RecordAdjust.MinimumMeters}" FontFamily="BoldFont" FontSize="16" TextColor="{StaticResource Color4}" HorizontalOptions="CenterAndExpand"></Label>
                        </StackLayout>
                        <StackLayout
                            Grid.Column="1"
                            Grid.Row="0"
                            Spacing="0"
                            Orientation="Vertical">
                            <Label Text="Velocidade Km/h" FontFamily="RegularFont" FontSize="12" TextColor="{StaticResource Color4}" HorizontalOptions="CenterAndExpand"></Label>
                            <Label Text="{Binding RecordAdjust.MinimumVelocity}" FontFamily="BoldFont" FontSize="16" TextColor="{StaticResource Color4}" HorizontalOptions="CenterAndExpand"></Label>
                        </StackLayout>
                        <range:SfRangeSlider 
                            x:Name="rangeDistance" 
                            Grid.Column="0"
                            Grid.Row="1"
                            Minimum="0" 
                            Maximum="10"
                            Orientation="Vertical"
                            ShowRange="False"
                            StepFrequency="1"
                            VerticalOptions="FillAndExpand"
                            TickPlacement="Outside"
                            TrackColor="#202D4768"
                            TrackSelectionColor="#802D4768"
                            KnobColor="{StaticResource Color4}"
                            TickFrequency="1"
                            Value="{Binding RecordAdjust.MinimumMeters}">
                        </range:SfRangeSlider>
                        <range:SfRangeSlider 
                            x:Name="rangeVelocity" 
                            Grid.Column="1"
                            Grid.Row="1"
                            Minimum="0" 
                            Maximum="30"
                            Orientation="Vertical"
                            ShowRange="False"
                            StepFrequency="1"
                            VerticalOptions="FillAndExpand"
                            TickPlacement="Outside"
                            TrackColor="#202D4768"
                            TrackSelectionColor="#802D4768"
                            KnobColor="{StaticResource Color4}"
                            TickFrequency="5"
                            Value="{Binding RecordAdjust.MinimumVelocity}">
                        </range:SfRangeSlider>
                    </Grid>
                </StackLayout>
            
                <StackLayout 
                    Grid.Row="2"
                    VerticalOptions="End" 
                    HorizontalOptions="FillAndExpand">
                    <Grid
                        RowSpacing="0"
                        ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <BoxView Grid.Row="0" Grid.ColumnSpan="2" HeightRequest="1" BackgroundColor="#20000000" Margin="0"></BoxView>
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            BackgroundColor="White"
                            Text="&#xe5cd;"
                            FontFamily="IconFont"
                            FontSize="30"
                            TextColor="Black"
                            Command="{Binding ClosePopupCommand}">
                        </Button>
                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            BackgroundColor="White"
                            Text="&#xe161;"
                            FontFamily="IconFont"
                            FontSize="30"
                            TextColor="Black"
                            Command="{Binding SaveRecordAjustmentCommand}">
                        </Button>
                    </Grid>
                </StackLayout>
            </Grid>
        </Frame>
    </ContentPage.Content>
</pages:PopupPage>